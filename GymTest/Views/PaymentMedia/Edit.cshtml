@model GymTest.Models.PaymentMedia

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar Medio de Pago</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PaymentMediaId" />
            <div class="form-group">
                <label asp-for="PaymentMediaDescription" class="control-label"></label>
                <input asp-for="PaymentMediaDescription" class="form-control" />
                <span asp-validation-for="PaymentMediaDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-default">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
