@model IEnumerable<GymTest.Models.Workday>

@{
    ViewData["Title"] = "Index";
}

<h2>Administraci√≥n de jornadas</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nueva jornada</a>
</p>
<form asp-controller="Workday" asp-action="Index">
    <p>
        Fecha desde: <input name="FromDate" class="datepicker" type="text" placeholder="dd/mm/aaaa">
        Fecha hasta: <input name="ToDate" class="datepicker" type="text" placeholder="dd/mm/aaaa">
        <input type="submit" value="Filtrar" class="btn btn-default" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Resource)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityOne)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityTwo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Resource.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkingDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantityOne)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantityTwo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.WorkdayId" class="btn btn-primary">Modificar</a>
                    <a asp-action="Details" asp-route-id="@item.WorkdayId" class="btn btn-primary">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
