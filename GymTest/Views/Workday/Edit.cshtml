@model GymTest.Models.Workday

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar jornada</h2>

<h4>Jornada</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WorkdayId" />
            <div class="form-group">
                <label asp-for="ResourceId" class="control-label"></label>
                <select asp-for="ResourceId" class="form-control" asp-items="ViewBag.ResourceId"></select>
                <span asp-validation-for="ResourceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkingDate" class="control-label"></label>
                <input asp-for="WorkingDate" class="form-control datepicker" />
                <span asp-validation-for="WorkingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityOne" class="control-label"></label>
                <input asp-for="QuantityOne" class="form-control" />
                <span asp-validation-for="QuantityOne" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityTwo" class="control-label"></label>
                <input asp-for="QuantityTwo" class="form-control" />
                <span asp-validation-for="QuantityTwo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-default">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
