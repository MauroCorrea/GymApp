@model GymTest.Models.UserReport

@{
    ViewData["Title"] = "Create";
}

<h2>Crear Reporte</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SignInDateFrom" class="control-label"></label>
                <input asp-for="SignInDateFrom" class="form-control datepicker" type="text" placeholder="dd/mm/aaaa" />
                <span asp-validation-for="SignInDateFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SignInDateTo" class="control-label"></label>
                <input asp-for="SignInDateTo" class="form-control datepicker" type="text" placeholder="dd/mm/aaaa" />
                <span asp-validation-for="SignInDateTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssitanceFrom" class="control-label"></label>
                <input asp-for="AssitanceFrom" class="form-control datepicker" type="text" placeholder="dd/mm/aaaa" />
                <span asp-validation-for="AssitanceFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssitanceTo" class="control-label"></label>
                <input asp-for="AssitanceTo" class="form-control datepicker" type="text" placeholder="dd/mm/aaaa" />
                <span asp-validation-for="AssitanceTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AgeFrom" class="control-label"></label>
                <input asp-for="AgeFrom" class="form-control" />
                <span asp-validation-for="AgeFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AgeTo" class="control-label"></label>
                <input asp-for="AgeTo" class="form-control" />
                <span asp-validation-for="AgeTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssitanceCountFrom" class="control-label"></label>
                <input asp-for="AssitanceCountFrom" class="form-control" />
                <span asp-validation-for="AssitanceCountFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssitanceCountTo" class="control-label"></label>
                <input asp-for="AssitanceCountTo" class="form-control" />
                <span asp-validation-for="AssitanceCountTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayDateFrom" class="control-label"></label>
                <input asp-for="PayDateFrom" class="form-control datepicker" type="text" placeholder="dd/mm/aaaa" />
                <span asp-validation-for="PayDateFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayDateTo" class="control-label"></label>
                <input asp-for="PayDateTo" class="form-control datepicker" type="text" placeholder="dd/mm/aaaa" />
                <span asp-validation-for="PayDateTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovementTypeId" class="control-label"></label>
                <select asp-for="MovementTypeId" class ="form-control" asp-items="ViewBag.MovementTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PaymentMediaId" class="control-label"></label>
                <select asp-for="PaymentMediaId" class ="form-control" asp-items="ViewBag.PaymentMediaId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-default">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
