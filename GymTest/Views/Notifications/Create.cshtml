@model GymTest.Models.Notification

@{
    ViewData["Title"] = "Create";
}

<h2>Notificaciones</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-antiforgery="false">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="To" class="control-label"></label>
                <input asp-for="To" class="form-control" placeholder="Destinos sperarados por ';'"/>
                <span asp-validation-for="To" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <textarea rows="10" cols="80" asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enviar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-default">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
