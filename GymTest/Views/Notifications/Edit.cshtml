@model GymTest.Models.Notification

@{
    ViewData["Title"] = "Notificaciones";
}

<h2>Volver a Enviar</h2>

<h4>Notification</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NotificationId" />
            @if (Model.Everyone)
            {
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Everyone"/> @Html.DisplayNameFor(model => model.Everyone)
                        </label>
                    </div>
                </div>
            }
        <div class="form-group">
            <div class="checkbox">
                <label>
                    <input asp-for="Send" readonly="readonly" onclick="javascript: return false;"/> @Html.DisplayNameFor(model => model.Send)
                </label>
            </div>
        </div>

        @if (!Model.Everyone)
        {
            <div class="form-group" id="divTo">
                <label asp-for="To" class="control-label"></label>
                <input asp-for="To" class="form-control" />
                <span asp-validation-for="To" class="text-danger"></span>
            </div>
        }

        <div class="form-group">
            <label asp-for="Message" class="control-label"></label>
            <textarea rows="10" cols="80" asp-for="Message" class="form-control" ></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Enviar" class="btn btn-success" />
        </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-default">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
