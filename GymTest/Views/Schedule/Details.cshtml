@model GymTest.Models.Schedule

@{
    ViewData["Title"] = "Details";
}

<h2>Agregar Alumno</h2>

<div>
    <h4>Actividad</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Discipline)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Discipline.DisciplineDescription)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StartTime)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.EndTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EndTime)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Resource)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Resource.FullName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Places)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Places)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ScheduleDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ScheduleDate)
        </dd>
    </dl>
</div>
<div class="form-group">
    @Html.DropDownList("MySkills", (IEnumerable<SelectListItem>)ViewBag.MySkills)
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ScheduleId" class="btn btn-success">Edit</a>
    <a asp-action="InsertuserIntoScheduler" asp-route-idSchedule="@Model.ScheduleId" asp-route-id="@Html.DropDownList("MySkills").ToString()" class="btn btn-success">Agregar</a>
    <a asp-action="Index" class="btn btn-default">Volver</a>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ScheduleUsers.FirstOrDefault().User.FullName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ScheduleUsers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.FullName)
                </td>
                
                <td>
                    <a asp-action="Delete" asp-route-id="@item.ScheduleId" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>