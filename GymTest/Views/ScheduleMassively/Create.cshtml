@model GymTest.Models.ScheduleMassively

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>ScheduleMassively</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DisciplineId" class="control-label"></label>
                <select asp-for="DisciplineId" class ="form-control" asp-items="ViewBag.DisciplineId"></select>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResourceId" class="control-label"></label>
                <select asp-for="ResourceId" class ="form-control" asp-items="ViewBag.ResourceId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Places" class="control-label"></label>
                <input asp-for="Places" class="form-control" />
                <span asp-validation-for="Places" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFormatStartString" class="control-label"></label>
                <input asp-for="DataFormatStartString" class="form-control datepicker" type="text" placeholder="dd/mm/aaaa" />
                <span asp-validation-for="DataFormatStartString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFormatEndString" class="control-label"></label>
                <input asp-for="DataFormatEndString" class="form-control datepicker" type="text" placeholder="dd/mm/aaaa" />
                <span asp-validation-for="DataFormatEndString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Schedule" asp-action="Index" class="btn btn-default">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
